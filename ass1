puts "Enter 2 no's : "
a=gets.chomp.to_i
b=gets.chomp.to_i
begin
 puts "Enter '1' for addition ; '2' for subtraction , '3' for multiplication , '4' for division , '5' for modulus"
 choice=gets.chomp.to_i
 case choice
  when 1 then puts "Sum = "+(a+b).to_s
  when 2 then puts "Difference = "+(a-b).to_s
  when 3 then puts "Product = "+(a*b).to_s
  when 4 then puts "Quotient = "+(a/b).to_s
  when 5 then puts "Remainder = "+(a%b).to_s
  else
   puts "Invalid choice!"
 end
 puts "Do you want to continue(Y/N)? "
 ch=gets.chomp.to_s  
end while ch=="Y"
